---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import PgBg from '../components/PgBg.astro';
import PgLoader from '../components/PgLoader.astro';
import PgLoaderRadical from '../components/PgLoaderRadical.astro';
import PostContent from '../components/blog/PostContent.astro';

const meta = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={meta.title} description={meta.description} />
    <script is:inline type="module">
      import { init } from "/scripts/fade/index.js";
      init();
    </script>
  </head>
  <body class="blogpost">
    <PgBg />
    <div class="content">
      <Header />
      <main class="post-content">
        <PostContent {...meta}>
          <slot/>
        </PostContent>
      </main>
      <Footer />
    </div>
  </body>
</html>
