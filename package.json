{
  "name": "seventh-heaven-blog",
  "type": "module",
  "version": "1.4.1-beta.1",
  "scripts": {
    "sass": "sass src/styles/global.scss public/styles/global.css --no-source-map",
    "dev:sass": "npx sass --watch src/styles/global.scss:public/styles/global.css",
    "dev": "astro dev --remote",
    "build": "npm run sass && astro build --remote",
    "preview": "wrangler pages dev ./dist",
    "astro": "astro",
    "test": "npx vitest",
    "test:paths": "node tests/scripts/generate-test-parsed-paths.js",
    "test:fixtures": "node tests/scripts/generate-all-test-fixtures.js --local --test --strict",
    "test:deploy-local": "node scripts/deploy-from-changelog.js --local --test --strict ",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "hook:log": "tail -n 25 .husky/log.txt",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format . --write",
    "semantic-release": "semantic-release --extends ./release.config.cjs",
    "commit": "git commit --no-edit",
    "verify-map": "node scripts/verify-components-map.js",
    "fetch:all": "git fetch --all --prune",
    "merge:dev": "git merge dev"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.2.4",
    "@astrojs/mdx": "^4.1.0",
    "@astrojs/node": "^9.1.3",
    "@astrojs/react": "^4.2.1",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/ts-plugin": "^1.10.4",
    "@libsql/client": "^0.15.0",
    "astro": "^5.4.2",
    "dompurify": "^3.2.4",
    "dotenv": "^16.5.0",
    "jsdom": "^26.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-toastify": "^11.0.5",
    "run": "^1.5.0",
    "sass": "^1.85.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.51.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "czg": "^1.11.1",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8",
    "wrangler": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./cz.config.cjs"
    }
  }
}
